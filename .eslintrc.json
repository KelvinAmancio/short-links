{
    "extends": [
        "@rocketseat/eslint-config/node"
    ],
    "rules": {
        "indent": [
            2,
            4
        ],
        "comma-dangle": "error",
        "no-multi-spaces": "error",
        "no-trailing-spaces": "error",
        "semi": "error",
        "prettier/prettier": [
            "error",
            {
                "printWidth": 100,
                "tabWidth": 4,
                "singleQuote": true,
                "trailingComma": "none",
                "arrowParens": "avoid",
                "semi": false
            }
        ]
    }
}